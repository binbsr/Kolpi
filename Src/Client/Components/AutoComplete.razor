@typeparam TItem
@inject IJSRuntime JSRuntime

<select id="slim-select" multiple>
    @foreach (TItem item in OptionItems ?? Array.Empty<TItem>())
    {
        @OptionTemplate(item)
    }
</select>

@code {
    
    [Parameter]
    public IEnumerable<TItem> OptionItems { get; set; }

    [Parameter]
    public RenderFragment<TItem> OptionTemplate { get; set; }

    private string placeHolderText = "Tag this question (Minimum two)";


    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("createSlimSelect", placeHolderText);
        }
    }
}