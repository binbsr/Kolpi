    async Task LoadData(LoadDataArgs args)
    {
        isLoading = true;
                
        string url = $"api/tags?filter={args.Filter}&skip={args?.Skip ?? 0}&take={args?.Top ?? 0}&orderBy={args?.OrderBy ?? ""}";
