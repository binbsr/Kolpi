@page "/questions"

<RadzenStack Gap="2rem">    
    <RadzenDataFilter @ref="dataFilter" Auto=@false Data="@questions" TItem="QuestionViewModel" ViewChanged=@(view => questionsGrid.Reload())>
        <Properties>
            <RadzenDataFilterProperty TItem="QuestionViewModel" Property="Type" Title="Question Type" />
            <RadzenDataFilterProperty TItem="QuestionViewModel" Property="Tags" Title="Tags" />
        </Properties>
    </RadzenDataFilter>

    <RadzenDataGrid @ref="@questionsGrid" AllowPaging="@true" AllowSorting="@true" IsLoading="@isLoading"
                    Data="@(filteredQuestions)" TItem="QuestionViewModel" Count="@totalItems" LoadData="@LoadData"
                    ColumnWidth="200px" PageSize="20" Style="height: 500px">
        <Columns>
            <RadzenDataGridColumn Width="200px" TItem="QuestionViewModel" Property="OrderID" Title="Order ID" />
            <RadzenDataGridColumn Width="200px" TItem="QuestionViewModel" Property="Customer.CompanyName" Title="Customer" />
            <RadzenDataGridColumn TItem="QuestionViewModel" Property="Employee.LastName" Title="Employee">
                <Template Context="order">
                    @order.Body
                </Template>
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="QuestionViewModel" Property="Employee.Title" Title="Employee Title" />  
        </Columns>
    </RadzenDataGrid>
</RadzenStack>

