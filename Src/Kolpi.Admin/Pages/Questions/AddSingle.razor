@page "/question/add"

<RadzenText TextStyle="TextStyle.DisplayH6" Style="margin-top:0">Write your question</RadzenText>
<RadzenHtmlEditor @bind-Value=@Question.Body
                  style="height: 250px;"
                  Input="@OnInput"
                  UploadUrl="upload/image" />

<RadzenDropDown @bind-Value=@tagsSelected Data=@Tags TextProperty="Name" ValueProperty="Id"
                Multiple=true
                AllowClear=true
                AllowSelectAll=false
                Placeholder="Select tags"
                Chips=true
                Style="width: 100%"
                class="rz-my-2"
                AllowFiltering=true
                FilterAsYouType=true
                FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive
                FilterOperator="StringFilterOperator.Contains"
                MaxSelectedLabels="8" />

@{
    char i = 'A';
}
<RadzenStack Orientation="Orientation.Vertical" Gap="8px" JustifyContent="@JustifyContent.Start" AlignItems="@AlignItems.Start">

    @foreach (var option in answerOptionViewModels)
    {
        var optionLabel = "Option " + i++;
        <AnsOption AnswerModel="@option" TextInputLabel="@optionLabel" RemoveItemCallback="DeleteAnsOption" />
    }
    <RadzenButton Icon="add" ButtonStyle="ButtonStyle.Danger" Click="AddNewOption" title="Add new option" />
</RadzenStack>
