@using Kolpi.WebShared.ViewModels

<MudContainer Class="d-flex gap-4 mx-0">
    <MudTooltip Text="@ChkTooltip" Arrow Placement="Placement.Start">
        <MudCheckBox @bind-Checked="AnswerModel.IsAnswer" Size="Size.Large" Color="Color.Primary" Class="d-inline-flex">Answer</MudCheckBox>
    </MudTooltip>
    <MudTextField @bind-Value="AnswerModel.Body" Label="@TextInputLabel" Variant="Variant.Text" Margin="Margin.Dense" Class="d-inline-flex" FullWidth></MudTextField>
    <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" @onclick="RemoveItem" Class="d-inline-flex"></MudIconButton>
</MudContainer>

@code
{
    [Parameter]
    public AnswerOptionViewModel AnswerModel { get; set; }

    [Parameter]
    public EventCallback<AnswerOptionViewModel> RemoveItemCallback { get; set; }

    [Parameter]
    public string TextInputLabel { get; set; } = "Option";
    public string ChkTooltip => AnswerModel.IsAnswer ? "You marked it as answer." : "Click if its an answer.";

    private async Task RemoveItem()
    {
        await RemoveItemCallback.InvokeAsync(AnswerModel);
    }
}
