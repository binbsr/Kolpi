@inherits LayoutComponentBase

<RadzenLayout>
    <RadzenHeader class="rz-background-color-base-300">
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => _drawerOpen = !_drawerOpen)" class="rz-background-color-base-300" />
            <RadzenLabel Text="Kolpi Exams" />
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="_drawerOpen">
        <RadzenPanelMenu Multiple Match="NavLinkMatch.All">
            <SideNavigation />
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
    <RadzenFooter class="rz-background-color-base-300">
        Kolpi &COPY; @DateTime.Now.Year
    </RadzenFooter>
</RadzenLayout>

<RadzenComponents />

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    bool _drawerOpen = false;
}
